{
  "name": "revcast-lite-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@mantine/core": "^6.0.17",
    "@types/node": "^16.18.39",
    "@types/react": "^17.0.23",
    "@types/react-dom": "^18.2.7",
    "axios": "^1.5.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@testing-library/cypress": "^10.0.1",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.0.0",
    "@types/jest": "^27.5.2",
    "@types/supertest": "^2.0.12",
    "cypress": "^13.2.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-cypress": "^2.15.1",
    "eslint-plugin-jest-dom": "^5.1.0",
    "jest": "^29.7.0",
    "jest-preview": "^0.3.1",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "scripts": {
    "start": "NODE_ENV=development react-scripts start & NODE_ENV=development nodemon src/server.ts",
    "build": "react-scripts build",
    "deploy": "NODE_ENV=production ts-node src/server.ts",
    "test": "jest-preview & react-scripts test --verbose --maxWorkers=1",
    "e2e": "cypress run",
    "cypress:open": "cypress open",
    "coverage": "react-scripts test --coverage --watchAll=false",
    "lint": "eslint --ignore-path .gitignore .",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "plugin:jest-dom/recommended",
      "eslint-config-prettier"
    ],
    "overrides": [
      {
        "extends": [
          "plugin:cypress/recommended"
        ],
        "files": [
          "cypress/**/*.js"
        ]
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "proxy": "http://localhost:4000",
  "jest": {
    "collectCoverageFrom": [
      "!src/(data|api)/**/*.{ts,tsx}",
      "!src/(index.tsx|react-app-env.d.ts|reportWebVitals.ts)"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
